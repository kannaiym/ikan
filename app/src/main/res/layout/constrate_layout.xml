<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/username_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/colorText"
        android:textSize="16sp"
        android:text="Имя пользователя:"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/username_value_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/username_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/colorText"
        android:textSize="16sp"
        tools:text="Канайым"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/lastname_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/username_text_view"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Фамилия пользователя:"
        android:padding="8dp"
        android:textColor="@color/colorText"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/lastname_value_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/username_text_view"
        app:layout_constraintStart_toEndOf="@+id/lastname_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Ишенбек"
        android:padding="8dp"
        android:textColor="@color/colorText"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/age_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/lastname_text_view"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Возраст пользователя:"
        android:padding="8dp"
        android:textColor="@color/colorText"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/age_value_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/lastname_text_view"
        app:layout_constraintStart_toEndOf="@+id/age_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="18"
        android:padding="8dp"
        android:textColor="@color/colorText"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/age_text_view"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Номер телефона:"
                android:padding="8dp"
                android:textColor="@color/colorText"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/phone_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Введите номер телефона"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Город:"
                android:padding="8dp"
                android:textColor="@color/colorText"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/city_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Введите город"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Область:"
                android:padding="8dp"
                android:textColor="@color/colorText"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/region_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Введите область"
                android:textSize="16sp"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/save_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Сохранить"
        android:textColor="@color/colorPrimary"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>